{
  "Background": {
    "type": "Background",
    "selector": ".side-product"
  },
  "BackgroundHover": {
    "type": "Background",
    "selector": ".side-product:hover"
  },
  "Shadow": {
    "type": "Shadow",
    "selector": ".side-product"
  },
  "ShadowHover": {
    "type": "Shadow",
    "selector": ".side-product:hover"
  },
  "Border": {
    "type": "Border",
    "selector": ".side-product"
  },
  "BorderHover": {
    "type": "Color",
    "property": "border-color",
    "selector": ".side-product:hover"
  },
  "BorderRadius": {
    "type": "BorderRadius",
    "selector": ".side-product"
  },
  "Padding": {
    "type": "Padding",
    "selector": ".side-product"
  },
  "ItemSpacing": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".product-layout": "margin-top:%spx"
      }
    }
  },
  "AlignItems": {
    "type": "Radio",
    "value": "",
    "selector": ".side-product",
    "property": "align-items: %s"
  },
  "ImageFill": {
    "type": "Radio",
    "value": "auto",
    "selector": ".side-product .image a",
    "property": "height: %s"
  },
  "ImageBorder": {
    "type": "Border",
    "selector": ".side-product .image img"
  },
  "ImageBorderHover": {
    "type": "Color",
    "property": "border-color:%s",
    "selector": ".side-product:hover .image img"
  },
  "ImageBorderRadius": {
    "type": "BorderRadius",
    "selector": ".side-product .image img"
  },
  "ImagePadding": {
    "type": "Padding",
    "selector": ".side-product .product-img"
  },
  "ImageBackground": {
    "type": "Background",
    "selector": ".side-product .product-img img"
  },
  "ImageShadow": {
    "type": "Shadow",
    "selector": ".side-product .image img"
  },
  "ImageShadowHover": {
    "type": "Shadow",
    "selector": ".side-product:hover .image img"
  },
  "Grayscale": {
    "type": "Radio",
    "value": "",
    "rules": {
      "none": {
        ".side-product .image img": "filter: grayscale(0)"
      },
      "always": {
        ".side-product .image img": "filter: grayscale(1)"
      },
      "hover": {
        ".side-product .image img": "filter: grayscale(1)",
        ".side-product:hover .image img": "filter: grayscale(0)"
      }
    }
  },
  "ItemGap": {
    "type": "InputNumber",
    "value": "10",
    "property": "--mini-product-gap:%spx",
    "selector": ".side-product"
  },
  "SplitRatio": {
    "type": "Select",
    "value": "30",
    "rules": {
      "25": {
        ".side-product .image": "width:calc(%s% - var(--mini-product-gap, 0px) * 2)",
        ".side-product .caption": "width:calc((100% - %s%) - var(--mini-product-gap, 0px) * 2)"
      },
      "30": {
        ".side-product .image": "width:calc(%s% - var(--mini-product-gap, 0px) * 2)",
        ".side-product .caption": "width:calc((100% - %s%) - var(--mini-product-gap, 0px) * 2)"
      },
      "33": {
        ".side-product .image": "width:calc(%s.3333% - var(--mini-product-gap, 0px) * 2)",
        ".side-product .caption": "width:calc((100% - %s.3333%) - var(--mini-product-gap, 0px) * 2)"
      },
      "40": {
        ".side-product .image": "width:calc(%s% - var(--mini-product-gap, 0px) * 2)",
        ".side-product .caption": "width:calc((100% - %s%) - var(--mini-product-gap, 0px) * 2)"
      },
      "50": {
        ".side-product .image": "width:calc(%s% - var(--mini-product-gap, 0px) * 2)",
        ".side-product .caption": "width:calc((100% - %s%) - var(--mini-product-gap, 0px) * 2)"
      },
      "100": {
        ".side-product .image": "width:calc(%s% - var(--mini-product-gap, 0px) * 2)",
        ".side-product .caption": "width:calc(%s% - var(--mini-product-gap, 0px) * 2)",
        ".side-product": "display:flex"
      }
    }
  },
  "QuickviewVisibility": {
    "type": "Toggle",
    "value": "",
    "rules": {
      "true": {
        ".side-product .quickview-button": "display:inline-flex"
      },
      "false": {
        ".side-product .quickview-button": "display:none"
      }
    }
  },
  "QuickviewTouchVisibility": {
    "type": "Toggle",
    "value":"",
    "rules": {
      "true": {
        ".side-product .quickview-button": "--display:inline-flex"
      },
      "false": {
        ".side-product .quickview-button": "--display:none"
      }
    }
  },
  "QuickviewPosition": {
    "type": "Radio",
    "value": "center",
    "rules": {
      "true": {
        ".side-product .quickview-button": "display:inline-flex"
      },
      "false": {
        ".side-product .quickview-button": "display:none"
      }
    }
  },
  "QuickviewPadding": {
    "type": "Padding",
    "selector": ".side-product .quickview-button .btn",
    "important": true
  },
  "QuickviewRadius": {
    "type": "BorderRadius",
    "selector": ".side-product .quickview-button .btn",
    "important": true
  },
  "QuickviewDisplay": {
    "type": "Radio",
    "value": "icon",
    "rules": {
      "icon": {
        ".side-product .btn-quickview .btn-text": "display:none",
        ".side-product .btn-quickview::before": "display:inline-flex"
      },
      "text": {
        ".side-product .btn-quickview::before": "display:none",
        ".side-product .btn-quickview .btn-text": "display:inline-block; padding:0;"
      },
      "both": {
        ".side-product .btn-quickview::before": "display:inline-flex",
        ".side-product .btn-quickview .btn-text": "display:inline-block"
      }
    },
    "php": true
  },
  "QuickviewAlign": {
    "type": "Select",
    "value": "c",
    "rules": {
      "tl": {
        ".side-product .quickview-button": "align-items: flex-start; justify-content: flex-start;"
      },
      "tc": {
        ".side-product .quickview-button": "align-items: flex-start; justify-content: center;"
      },
      "tr": {
        ".side-product .quickview-button": "align-items: flex-start; justify-content: flex-end;"
      },
      "c": {
        ".side-product .quickview-button": "align-items: center; justify-content: center;"
      },
      "bl": {
        ".side-product .quickview-button": "align-items: flex-end; justify-content: flex-start;"
      },
      "bc": {
        ".side-product .quickview-button": "align-items: flex-end; justify-content: center;"
      },
      "br": {
        ".side-product .quickview-button": "align-items: flex-end; justify-content: flex-end;"
      }
    }
  },
  "QuickviewShow": {
    "type": "Radio",
    "value": "always",
    "rules": {
      "always": {
        ".side-product .quickview-button .btn-quickview": "--visibility: visible; --opacity: 1;"
      },
      "hover": {
        ".side-product .quickview-button .btn-quickview": "--visibility: hidden; --opacity: 0; transform: scale(.85);"
      }
    }
  },
  "QuickviewOffset": {
    "type": "InputPair",
    "selector": ".side-product .btn-quickview",
    "properties": {
      "first": "margin-left:%spx",
      "second": "margin-top:%spx; margin-bottom:calc(0px - (%spx))"
    },
    "rtlProperties": {
      "first": "margin-left:calc(0px - (%spx))",
      "second": "margin-top:%spx; margin-bottom:calc(0px - (%spx))"
    }
  },
  "QuickviewSize": {
    "type": "InputPair",
    "selector": ".side-product .btn-quickview",
    "properties": {
      "first": "width:%spx",
      "second": "height:%spx"
    },
    "important": true
  },
  "QuickviewIcon": {
    "type": "Icon",
    "selector": ".side-product .btn-quickview::before",
    "value": {
      "icon": {
        "name": "eye",
        "code": "f06e"
      }
    }
  },
  "QuickviewIconHover": {
    "type": "Color",
    "property": "color:%s",
    "selector": ".side-product .btn-quickview:hover::before"
  },
  "QuickviewTooltipStatus": {
    "type": "Toggle",
    "php": true
  },
  "QuickviewTooltipPosition": {
    "type": "Radio",
    "value": "top",
    "php": true
  },
  "QuickviewTooltip": {
    "type": "Variable",
    "variable": "tooltip",
    "selector_prefix": "&.quickview-tooltip"
  },
  "QuickviewButton": {
    "type": "Variable",
    "variable": "button",
    "selector_prefix": ".side-product .btn-quickview&"
  },
  "DetailsBG": {
    "type": "Background",
