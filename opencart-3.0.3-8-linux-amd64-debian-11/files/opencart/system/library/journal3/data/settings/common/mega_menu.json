{
  "MegaMenuBackground": {
    "type": "Background",
    "selector": ".mega-menu-content"
  },
  "MegaMenuBorder": {
    "type": "Border",
    "selector": ".mega-menu-content",
    "desktop":true
  },
  "MegaMenuBorderRadius": {
    "type": "BorderRadius",
    "selector": ".mega-menu-content",
    "desktop":true
  },
  "MegaMenuShadow": {
    "type": "Shadow",
    "selector": ".j-dropdown > .mega-menu-content"
  },
  "MegaMenuPadding": {
    "type": "Padding",
    "selector": ".mega-menu-content"
  },
  "MegaMenuHeight": {
    "type": "InputNumber",
    "value": "",
    "rules": {
      "@": {
        ".j-dropdown > .mega-menu-content": "max-height:%spx !important"
      }
    }
  },
  "MenuTriangle": {
    "include": "triangle",
    "selector_prefix": "&.menu-item.dropdown.mega-menu"
  }
}
